<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DJZeus_Client.ViewModels"
             x:Class="DJZeus_Client.Views.MainView"
             x:DataType="viewmodel:MainViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="DJ Zeus">

    <ScrollView>
        <VerticalStackLayout
            Padding="15" 
            Spacing="12"
            VerticalOptions="Start">

            <Border Stroke="LightGray"
                    StrokeThickness="1"
                    Padding="12">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <Grid ColumnDefinitions="Auto, *" ColumnSpacing="15" VerticalOptions="Center">
                    <Image Grid.Column="0"
                           Source="{Binding WeatherIconUrl}"
                           HeightRequest="50"
                           WidthRequest="50"
                           Aspect="AspectFit"/>
                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                        <Label 
                            Text="{Binding Location}"
                            FontSize="22"
                            FontAttributes="Bold" />
                        <Label 
                            Text="{Binding Temperature}"
                            FontSize="16"/> 
                    </VerticalStackLayout>
                </Grid> 
                <!--<HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                    <Image
                        Source="{Binding WeatherIconUrl}"
                        HeightRequest="50"
                        WidthRequest="50"
                        Aspect="AspectFit"/>
                    <VerticalStackLayout Spacing="2">
                        <Label 
                            Text="{Binding Location}"
                            FontSize="22"
                            FontAttributes="Bold" />
                        <Label 
                            Text="{Binding Temperature}"
                            FontSize="16"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>-->
            </Border>

            <Label 
                Text="{Binding WeatherDescription}"
                HorizontalOptions="Center"
                Style="{StaticResource SubHeadline}"/>

            <Border StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <toolkit:MediaElement
                    x:Name="mediaElement"
                    Source="{Binding VideoStreamUrl}"
                    ShouldAutoPlay="True"
                    ShouldShowPlaybackControls="True"
                    Aspect="AspectFill"
                    HeightRequest="180" />
            </Border>

            <Label 
                Text="{Binding PlaylistTitle}"
                HorizontalOptions="Center"
                FontSize="16"
                FontAttributes="Bold"
                Margin="0,5,0,0"/>

            <Button
                Text="새로고침" 
                Command="{Binding LoadDataCommand}"
                HorizontalOptions="Center"
                WidthRequest="120"
                Style="{StaticResource FilledButton}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>